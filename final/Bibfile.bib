@PhdThesis{王占宁2013,
  author   = {王占宁},
  title    = {黄金与其他主要贵金属价格的相关性研究},
  school   = {浙江大学},
  year     = {2013},
  abstract = {本文对于目前金融市场上主要贵金属的价格进行相关性分析。发现贵金属不同于一般的商品,从几千年以前便被人们所推崇,其商品属性、货币属性和金融属性在不同的历史发展阶段表现出了不同的作用和影响力。目前国外学者对主要责金属现货期货价格影响因素的研究相对国内更为丰富,国内方面大多是黄金和白银的历史、价格研究,贵金属间相关性的文献并不多,而侧重于黄金与其他贵金属关联的研究就少之又少了。在金融危机多发的经济格局下,贵金属市场俨然成为资产保值的避风港,相对于贵金属自身所固有的商品属性,其金融属性更加吸引投资者们的目光。因此,不管对国家央行还是个人来说,能准确把握贵金属价格是十分重要的。

本文从介绍贵金属市场结构入手,通过分析黄金、白银、铂金和钯金的供求结构,发现黄金与其他主要贵金属之间的供求交集。在分析贵金属价格的影响机制之后,运用实证方法检验黄金与其他贵金属价格之间的互动性,发现黄金与白银之间存在着长期协整关系,黄金与铂金、钯金之间不存在长期相关性。同时也得出黄金与其他贵金属之间存在着不同程度短期影响的结论。最后,在理论和实证检验的基础上,针对主要贵金属提出了一些投资建议。},
  keywords = {黄金价格;;贵金属市场;;实证分析},
}

@Article{郭彦峰2009,
  author   = {郭彦峰 and 肖倬},
  key	= {guo yan feng  and xiao zhuo},
  title    = {中美黄金市场的价格发现和动态条件相关性研究},
